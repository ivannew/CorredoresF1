<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CorredoresF1.View.Vcorredor">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#2196f3" Padding="24" CornerRadius="0">
                <Label Text="Inventario" HorizontalTextAlignment="Center" TextColor="White"></Label>
            </Frame>
            <Label Text="Registrar Corredor" FontSize="Title" Padding="30,10,30,10"></Label>
            <Entry Placeholder="Nombre producto" Text="{Binding Nombre}"></Entry>
            <Entry Placeholder="Numero" Text="{Binding Numero}"></Entry>
            <Entry Placeholder="Equipo" Text="{Binding Equipo}"></Entry>
            <Button Text="Registra" Command="{Binding InsertarCorredor}"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>